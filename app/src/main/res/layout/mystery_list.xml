<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<de.hdodenhof.circleimageview.CircleImageView
		android:scaleType="centerCrop"
		app:border_color="@color/colorAccent"
		app:border_width="1dp"
		android:layout_width="40dp"
		android:layout_height="40dp"
		app:srcCompat="@drawable/nativity1"
		android:id="@+id/imageView"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="8dp" app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="8dp"
	/>

	<TextView
		android:fontFamily="sans-serif-condensed"
		android:textColor="@color/colorAccent"
		android:textAllCaps="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/day" android:layout_marginStart="8dp"
		app:layout_constraintLeft_toRightOf="@+id/imageView" android:layout_marginLeft="8dp"
		app:layout_constraintTop_toTopOf="@+id/imageView"
		tools:ignore="UnusedAttribute" />

	<TextView
		android:textSize="19sp"
		android:fontFamily="cursive"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/mystery"
		android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/day"
		app:layout_constraintLeft_toLeftOf="@+id/day"
		app:layout_constraintBottom_toBottomOf="@+id/imageView"
		tools:ignore="UnusedAttribute" />

</android.support.constraint.ConstraintLayout>